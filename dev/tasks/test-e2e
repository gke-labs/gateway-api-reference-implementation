set -o errexit
set -o nounset
set -o pipefail

REPO_ROOT=$(git rev-parse --show-toplevel)

# Install kind
KIND_VERSION="v0.31.0"
KIND_BIN="${REPO_ROOT}/.build/src/kind/${KIND_VERSION}/bin/kind"
if [[ ! -x "${KIND_BIN}" ]]; then
    echo "Installing kind ${KIND_VERSION}..."
    mkdir -p "$(dirname "${KIND_BIN}")"
    GOBIN="$(dirname "${KIND_BIN}")" go install "sigs.k8s.io/kind@${KIND_VERSION}"
fi
mkdir -p "${REPO_ROOT}/.build/bin"
ln -sf "../src/kind/${KIND_VERSION}/bin/kind" "${REPO_ROOT}/.build/bin/kind"

# Install kubectl
KUBECTL_VERSION="v1.35.0"
KUBECTL_BIN="${REPO_ROOT}/.build/src/kubectl/${KUBECTL_VERSION}/bin/kubectl"
if [[ ! -x "${KUBECTL_BIN}" ]]; then
    echo "Installing kubectl ${KUBECTL_VERSION}..."
    mkdir -p "$(dirname "${KUBECTL_BIN}")"
    curl -sLo "${KUBECTL_BIN}" "https://dl.k8s.io/release/${KUBECTL_VERSION}/bin/$(go env GOOS)/$(go env GOARCH)/kubectl"
    chmod +x "${KUBECTL_BIN}"
fi
ln -sf "../src/kubectl/${KUBECTL_VERSION}/bin/kubectl" "${REPO_ROOT}/.build/bin/kubectl"

# Install docker CLI
DOCKER_VERSION="29.2.1"
DOCKER_BIN="${REPO_ROOT}/.build/src/docker/${DOCKER_VERSION}/bin/docker"
if [[ ! -x "${DOCKER_BIN}" ]]; then
    echo "Installing docker ${DOCKER_VERSION}..."
    mkdir -p "$(dirname "${DOCKER_BIN}")"
    curl -sLo "${REPO_ROOT}/.build/src/docker/${DOCKER_VERSION}/docker.tgz" "https://download.docker.com/linux/static/stable/x86_64/docker-${DOCKER_VERSION}.tgz"
    tar -C "$(dirname "${DOCKER_BIN}")" -xzf "${REPO_ROOT}/.build/src/docker/${DOCKER_VERSION}/docker.tgz" --strip-components=1 docker/docker
    rm "${REPO_ROOT}/.build/src/docker/${DOCKER_VERSION}/docker.tgz"
    chmod +x "${DOCKER_BIN}"
fi
ln -sf "../src/docker/${DOCKER_VERSION}/bin/docker" "${REPO_ROOT}/.build/bin/docker"

export PATH="${REPO_ROOT}/.build/bin:${PATH}"
export RUN_E2E=1

echo "Running basic E2E tests..."
go test -v ./tests/e2e/... -run TestGatewayAPI

echo "Running Gateway API Conformance tests..."
# We expect these to fail initially, so we don't fail the task.
go test -v ./tests/e2e/... -run TestConformance || echo "Conformance tests failed (expected)"
